<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="AhorralandV1"
		transaction-type="JTA">
		<jta-data-source>java:/AhorraLandDS</jta-data-source>
		<class>pe.edu.upc.model.entity.Cart</class>
		<class>pe.edu.upc.model.entity.Category</class>
		<class>pe.edu.upc.model.entity.Consumer</class>
		<class>pe.edu.upc.model.entity.DeliveryMan</class>
		<class>pe.edu.upc.model.entity.Discount</class>
		<class>pe.edu.upc.model.entity.Discountdetail</class>
		<class>pe.edu.upc.model.entity.IdentificationType</class>
		<class>pe.edu.upc.model.entity.PaymentType</class>
		<class>pe.edu.upc.model.entity.Product</class>
		<class>pe.edu.upc.model.entity.Sale</class>
		<class>pe.edu.upc.model.entity.Seller</class>
		<class>pe.edu.upc.model.entity.Shipping</class>
		<class>pe.edu.upc.model.entity.ShippingStatus</class>
		<class>pe.edu.upc.model.entity.Status</class>

		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
		</properties>
	</persistence-unit>
</persistence>
